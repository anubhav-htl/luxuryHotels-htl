            .col-3
            
              .form-check
                input.form-check-input(type='checkbox' name='hotel_facilities' value='Laundry Service' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.hotel_facilities.includes('Laundry Service')))
