extends ../profilelayout


block content

  .container.mt-5.mb-4.ms-5
    .row.justify-content-center
      .col-12
        form#hoteldetails(method='post' action='/hotels/facilitiesamenities')   
          h6.mb-5.mt-5
            | PLEASE COMPLETE YOUR HOTEL INFORMATION TO CONTINUE
          h6.mb-5
            | ROOM AMENITIES
          .row.g-3.mb-5
            .col-3
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='Tea and Coffee Machine' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('Tea and Coffee Machine')))
                label.form-check-label(for='teaAndCoffee') Tea &amp; Coffee Machine

            .col-3
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='Business Center' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('Business Center')))
                label.form-check-label(for='businessCenter') Business Center

            .col-3
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='Gym' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('Gym')))
                label.form-check-label(for='gym') Gym

            .col-3
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='Shopping' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('Shopping')))
