          .row.g-3.mb-5
            .row.g-3#additional-facilities
            .col.text-end
              button.btn.btn-outline-danger.border-0(type='button' id='add-facility' style='font-size:14px') + ADD ADDITIONAL FACILITIES


          .row.mb-4.mt-5
            .col.text-end
              input(type="hidden" name="hotelId" value=hotelProfile && hotelProfile._id)
              input(type='hidden' name='_csrf' value=csrfToken)

          
          .row.mb-4
            .col-sm-12.text-end
              a.btn.btn-secondary.me-3(href='/hotels/topattractions') PREVIOUS
              button.btn.btn-danger(type='submit') CONTINUE


