            .col-3
            
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='Sleepers' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('Slippers')))
                label.form-check-label(for='businessCenter') Slippers

            .col-3
            
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='Hot Tub' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('Hot Tub')))
                label.form-check-label(for='gym') Hot Tub

            .col-3
            
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='Cable' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('Cable')))
                label.form-check-label(for='shopping') TV &amp; Cable



          .row.g-3.mb-5
            .col-3
            
              .form-check
                input.form-check-input(type='checkbox' name='room_amenities' value='WiFi' checked=(hotelProfile && hotelProfile.room_amenities && hotelProfile.room_amenities.includes('WiFi')))
